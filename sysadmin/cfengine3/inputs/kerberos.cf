#
# kerberos.cf
#

bundle agent kerberos
{
vars:
    "match_package" slist  => {
                                "gnutls-bin",
                                "krb5-admin-server",
                                "krb5-clients",
                                "krb5-kdc",
                                "krb5-user"
                               };

packages:
    "${match_package}"
        package_method  => apt,
        package_policy  => "add";
}

