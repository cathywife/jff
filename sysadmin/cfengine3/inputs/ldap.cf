#
# ldap.cf
#

bundle agent ldap
{
vars:
    "match_package" slist   => {
                                "slapd",
                                "ldap-utils",
                                "libnss-ldapd",
                                "libsasl2-modules-gssapi-mit"
                               };

packages:

    "$(match_package)"
        package_method  => apt,
        package_policy  => "add";

}

